<div id='links' class='span-24 last'>
<h1>Listing links</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Created by</th>
    <th>Votes</th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link_to "Upvote", vote_link_path(link, :vote => 'upvote') %></td>
    <td><%= link_to "Downvote", vote_link_path(link, :vote => 'downvote') %></td>
    <td><%= link_to link.name, link.uri %></td>
    <td><%= link.description %></td>
    <td><%= User.find(link.created_by).user_name %></td>
    <td><%= link.votes %></td>
    <td><%= link_to "Comment", new_comment_path(:link => link) %> (<%= link.comments.count %>)</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Link', new_link_path %>
</div>