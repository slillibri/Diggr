<h1>Listing urls</h1>

<table>
  <tr>
    <th>Uri</th>
    <th>Name</th>
    <th>Description</th>
    <th>Created by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @urls.each do |url| %>
  <tr>
    <td><%= url.uri %></td>
    <td><%= url.name %></td>
    <td><%= url.description %></td>
    <td><%= url.created_by %></td>
    <td><%= link_to 'Show', url %></td>
    <td><%= link_to 'Edit', edit_url_path(url) %></td>
    <td><%= link_to 'Destroy', url, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

